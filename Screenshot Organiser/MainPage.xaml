<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Screenshot_Organiser.MainPage"
             Title="Screenshot Organizer">

    <ScrollView>
        <VerticalStackLayout Spacing="25" Padding="30,0" VerticalOptions="Center">

            <Image
                Source="dotnet_bot.png"
                HeightRequest="185"
                Aspect="AspectFit"
                SemanticProperties.Description="Cute dot net bot waving hi to you!" />

            <Label 
                x:Name="StatusLabel"
                Text="Status: 🔄 Checking permissions..."
                FontSize="18"
                HorizontalOptions="Center" />

            <!-- Permissions Button - Hidden by default since permissions are requested automatically -->
            <Button 
                x:Name="PermissionsBtn"
                Text="🔐 Grant Permissions"
                IsVisible="False"
                FontSize="16"
                BackgroundColor="DarkBlue"
                TextColor="White" />

            <Button 
                x:Name="StartMonitoringBtn"
                Text="▶️ Start Monitoring"
                Clicked="OnStartMonitoringClicked"
                FontSize="16"
                BackgroundColor="Green"
                TextColor="White"
                IsEnabled="False" />

            <Button 
                x:Name="StopMonitoringBtn"
                Text="⏹️ Stop Monitoring"
                Clicked="OnStopMonitoringClicked"
                FontSize="16"
                BackgroundColor="Red"
                TextColor="White"
                IsEnabled="False" />

            <Label 
                Text="📱 How it works:"
                FontSize="16"
                FontAttributes="Bold"
                HorizontalOptions="Center" />

            <Label 
                Text="1. Grant the required permissions when prompted&#x0a;2. Select your default screenshot folder&#x0a;3. Start monitoring&#x0a;4. Take screenshots normally&#x0a;5. A dialog will appear to organize each screenshot"
                FontSize="14"
                HorizontalOptions="Center"
                HorizontalTextAlignment="Center" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>