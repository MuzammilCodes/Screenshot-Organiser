<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="Screenshot_Organiser.MainPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Screenshot Organizer">

    <ScrollView>
        <VerticalStackLayout Spacing="25" Padding="30,0" VerticalOptions="Center">

            <Label Text="Screenshot Organizer"
                   FontSize="28"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   TextColor="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource White}}" />

            <Label Text="This app will ask you where to save each screenshot you take."
                   FontSize="16"
                   HorizontalOptions="Center"
                   HorizontalTextAlignment="Center"
                   TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource Gray200}}" />

            <Button x:Name="PermissionsBtn"
                    Text="🔐 Grant Permissions"
                    Clicked="OnPermissionsClicked"
                    BackgroundColor="{StaticResource Primary}"
                    TextColor="White"
                    FontSize="16"
                    Padding="20,12" />

            <Button x:Name="StartMonitoringBtn"
                    Text="▶️ Start Monitoring"
                    Clicked="OnStartMonitoringClicked"
                    BackgroundColor="{StaticResource Success}"
                    TextColor="White"
                    FontSize="16"
                    Padding="20,12"
                    IsEnabled="False" />

            <Button x:Name="StopMonitoringBtn"
                    Text="⏹️ Stop Monitoring"
                    Clicked="OnStopMonitoringClicked"
                    BackgroundColor="{StaticResource Danger}"
                    TextColor="White"
                    FontSize="16"
                    Padding="20,12"
                    IsEnabled="False" />

            <Frame BackgroundColor="{AppThemeBinding Light={StaticResource Gray100}, Dark={StaticResource Gray900}}"
                   Padding="15"
                   CornerRadius="10">
                <VerticalStackLayout>
                    <Label x:Name="StatusLabel"
                           Text="Status: Ready"
                           FontSize="14"
                           FontAttributes="Bold"
                           HorizontalOptions="Center"
                           TextColor="{StaticResource Primary}" />

                    
                </VerticalStackLayout>
            </Frame>

            <Label Text="💡 Tip: Keep the app running in background for continuous monitoring"
                   FontSize="12"
                   HorizontalOptions="Center"
                   HorizontalTextAlignment="Center"
                   TextColor="{AppThemeBinding Light={StaticResource Gray600}, Dark={StaticResource Gray400}}"
                   Margin="0,10,0,0" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>